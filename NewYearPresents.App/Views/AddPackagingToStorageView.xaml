<Window x:Class="NewYearPresents.App.Views.AddPackagingToStorageView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewYearPresents.App.Views"
        xmlns:converter="clr-namespace:NewYearPresents.App.Core.Converters"
        mc:Ignorable="d"
        Title="AddPackagingToStorageView" 
        Height="300" Width="400"
        MinHeight="300" MinWidth="400"
        Name="AddPackagingWindow"
        Loaded="Window_Loaded">
    <Window.Resources>
        <converter:MathConverter x:Key="MathConverter"></converter:MathConverter>
    </Window.Resources>

    <Grid>
        <StackPanel Orientation="Vertical" Margin="20">
            <TextBlock HorizontalAlignment="Center" Text="Добавление упаковки"
                     Margin="0 0 0 10" FontSize="20"/>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Упаковка:" Width="100"/>
                <ComboBox IsEditable="True"
Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
ItemsSource="{Binding FilteredItems}"
SelectedItem="{Binding SelectedItem}"
DisplayMemberPath="Name" Name="PackagingComboBox"
IsTextSearchEnabled="False" Width="{Binding ElementName=AddPackagingWindow,
                    Path=ActualWidth,
                    Converter={StaticResource MathConverter},
                    ConverterParameter=(@VALUE-170)}">

                </ComboBox>
            </StackPanel>
            <Separator/>

            <StackPanel Orientation="Vertical" Visibility="{Binding PropertiesVisibility}">
                <StackPanel Orientation="Horizontal" Margin="0 10">
                    <TextBlock Text="Макс. вес:" Width="100"/>
                    <TextBlock Text="{Binding SelectedPackaging.MaxWeight}"/>
                    <TextBlock Text=" кг"/>
                </StackPanel>
                <Separator/>

            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 10">
                <TextBlock Text="Кол-во:" Width="100"/>
                <TextBox x:Name="CountTextBox" Width="{Binding ElementName=AddPackagingWindow,
                    Path=ActualWidth,
                    Converter={StaticResource MathConverter},
                    ConverterParameter=(@VALUE-170)}" 
                         Text="{Binding CountText}"/>
            </StackPanel>
            <Separator/>


        </StackPanel>
        <Button VerticalAlignment="Bottom" Content="Добавить" Margin="20"
                Command="{Binding AddButtonCommand}"
                CommandParameter="{Binding ElementName=AddPackagingWindow}"/>
    </Grid>
</Window>
