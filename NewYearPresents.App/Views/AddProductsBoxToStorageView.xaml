<Window x:Class="NewYearPresents.App.Views.AddProductsBoxToStorageView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewYearPresents.App.Views"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:converter="clr-namespace:NewYearPresents.App.Core.Converters"
        mc:Ignorable="d"
        Name="AddProductWindow"
        Height="450" Width="400"
        MinHeight="450" MinWidth="400"
        Loaded="Window_Loaded">
    <Window.Resources>
        <converter:MathConverter x:Key="MathConverter"></converter:MathConverter>
    </Window.Resources>
    
    <Grid>
        <StackPanel Orientation="Vertical" Margin="20">
            <TextBlock HorizontalAlignment="Center" Text="Добавление продукта" 
                       Margin="0 0 0 10" FontSize="20"/>

            <StackPanel Orientation="Horizontal">
            <TextBlock Text="Продукт:" Width="100"/>
            <ComboBox IsEditable="True"
  Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
  ItemsSource="{Binding FilteredItems}"
  SelectedItem="{Binding SelectedItem}"
  DisplayMemberPath="Name" Name="ProductsComboBox"
  IsTextSearchEnabled="False" Width="{Binding ElementName=AddProductWindow,
                    Path=ActualWidth,
                    Converter={StaticResource MathConverter},
                    ConverterParameter=(@VALUE-170)}">

            </ComboBox>
        </StackPanel>
        <Separator/>

        <StackPanel Orientation="Vertical" Visibility="{Binding PropertiesVisibility}">
            <StackPanel Orientation="Horizontal" Margin="0 10">
                <TextBlock Text="Категория:" Width="100"/>
                <TextBlock Text="{Binding SelectedProductsBox.ProductTypeName}"/>
            </StackPanel>
            <Separator/>

            <StackPanel Orientation="Horizontal" Margin="0 10">
                <TextBlock Text="Производитель:" Width="100"/>
                <TextBlock Text="{Binding SelectedProductsBox.ManufacturerName}"/>
            </StackPanel>
            <Separator/>

            <StackPanel Orientation="Horizontal" Margin="0 10">
                <TextBlock Text="Цена (кг):" Width="100"/>
                <TextBlock Text="{Binding SelectedProductsBox.Price30K}"/>
                <TextBlock Text=" руб."/>
            </StackPanel>
            <Separator/>

            <StackPanel Orientation="Horizontal" Margin="0 10">
                <TextBlock Text="Общий вес:" Width="100"/>
                <TextBlock Text="{Binding SelectedProductsBox.TotalWeight}"/>
                <TextBlock Text=" кг"/>
            </StackPanel>
            <Separator/>

            <StackPanel Orientation="Horizontal" Margin="0 10">
                <TextBlock Text="Срок годности:" Width="100"/>
                <TextBlock Text="{Binding SelectedProductsBox.ExpirationDate}"/>
                <TextBlock Text=" мес."/>
            </StackPanel>
            <Separator/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0 10">
                <TextBlock Text="Кол-во:" Width="100"/>
                <TextBox x:Name="CountTextBox" Width="{Binding ElementName=AddProductWindow,
                    Path=ActualWidth,
                    Converter={StaticResource MathConverter},
                    ConverterParameter=(@VALUE-170)}"/>
        </StackPanel>
        <Separator/>

        
    </StackPanel>
        <Button VerticalAlignment="Bottom" Content="Добавить" Margin="20"
                Command="{Binding AddButtonCommand}"/>
    </Grid>


</Window>
