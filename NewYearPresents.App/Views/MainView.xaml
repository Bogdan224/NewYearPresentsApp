<Window x:Class="NewYearPresents.App.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewYearPresents.App.Views"
        xmlns:viewModels="clr-namespace:NewYearPresents.App.ViewModels" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStyle="ThreeDBorderWindow"
        Height="450" Width="800"        
        Style="{StaticResource MaterialDesignWindow}">

    <Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock 
                Text="Сладоторг"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Foreground="Purple"
                FontSize="22"
                FontWeight="Bold"
                FontStyle="Italic"      
                FontFamily="/Fonts/#Poppins"/>

            <StackPanel 
                Grid.Column="1"   
                Orientation="Horizontal">

                <materialDesign:PackIcon 
                    Kind="Search"
                    Foreground="Black"
                    Width="45"
                    BorderThickness="0"
                    Focusable="False"
                    Margin="0 22" 
                    Height="26"
                    Background="Transparent"/>

                <TextBox 
                    Grid.Column="1"   
                    Margin="0 20"   
                    Width="400"
                    Name="SearchTextBox"/>
            </StackPanel>

            <StackPanel Grid.Row="1">
                <RadioButton Content="Каталог"
                             Height="50"
                             Style="{StaticResource MenuButtonKey}"
                             Foreground="Black"
                             FontSize="14"
                             Command="{Binding Path=ProductsViewCommand}"
                             IsChecked="True"/>

                <RadioButton Content="Склад"
                             Height="50"
                             Style="{StaticResource MenuButtonKey}"
                             Foreground="Black"
                             FontSize="14"/>

                <RadioButton Content="Заказы"
                             Height="50"
                             Style="{StaticResource MenuButtonKey}"
                             Foreground="Black"
                             FontSize="14"/>

                <RadioButton Content="Парсинг данных"
                             Height="50"
                             Style="{StaticResource MenuButtonKey}"
                             Foreground="Black"
                             FontSize="14"
                             Command="{Binding Path=ParsingViewCommand}"/>
            </StackPanel>

            <ContentControl Grid.Row="1"
                    Grid.Column="1"
                    Margin="10"
                    Content="{Binding Path=CurrentView}"/>

            <!--<Button Grid.Row="1" Grid.Column="1" Height="30" Width="100" Click="Parse_Click" Content="Parse"></Button>-->
        </Grid>


    </Border>
</Window>
