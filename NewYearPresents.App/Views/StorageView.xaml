<UserControl x:Class="NewYearPresents.App.Views.StorageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewYearPresents.App.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel>
        <Grid Cursor="">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="1"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <RadioButton
                Content="Продукты"
                Style="{StaticResource MenuButtonKey}" Foreground="Black"
                FontSize="16" BorderBrush="Black"
                IsChecked="True" Cursor="Hand"
                Height="30" Command="{Binding Path=ProductsBoxesDataGridRelay}"/>
            <RadioButton
                Grid.Column="2" BorderBrush="Black"
                Style="{StaticResource MenuButtonKey}"
                Content="Упаковки" Foreground="Black"
                FontSize="16" Cursor="Hand"
                Height="30" Command="{Binding Path=PackagingsDataGridRelay}"/>
        </Grid>
        <Separator/>
        <DataGrid 
            Background="White"
            x:Name="ProductsBoxesDataGrid"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            MinRowHeight="20"
            RowDetailsVisibilityMode="Visible"
            VerticalAlignment="Top"
            CanUserReorderColumns="False"
            CanUserResizeColumns="True"
            CanUserSortColumns="True"
            Sorting="StorageDataGrid_Sorting"
            CanUserResizeRows="False"
            SelectionUnit="Cell"
            Height="auto" >
            <DataGrid.Columns>
                <DataGridTextColumn Width="70"
                        Binding="{Binding Path=Id}"
                        IsReadOnly="True"
                        Foreground="Black">
                    <DataGridTextColumn.Header>
                        <TextBlock Foreground="Black"
                       Text="" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>

                <DataGridTextColumn Width="4*"
                        Binding="{Binding Path=Name}"
                        Foreground="Black"
                        CanUserSort="True">
                    <DataGridTextColumn.Header>
                        <TextBlock Foreground="Black"
                       Text="Название" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>

                <DataGridTextColumn Width="3*"
                        Binding="{Binding Path=ManufacturerName}"
                        Foreground="Black"
                        IsReadOnly="True"
                        CanUserSort="True">
                    <DataGridTextColumn.Header>
                        <TextBlock Foreground="Black"
                       Text="Производитель" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>

                <DataGridTextColumn Width="3*"
                        Binding="{Binding Path=ProductTypeName}"
                        Foreground="Black"
                        IsReadOnly="True"
                        CanUserSort="True">
                    <DataGridTextColumn.Header>
                        <TextBlock Foreground="Black"
                       Text="Категория" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>

                <DataGridTextColumn 
                    Width="*" Binding="{Binding Path=Price30K}"
                    Foreground="Black" IsReadOnly="True"
                    CanUserSort="True">
                    <DataGridTextColumn.Header>
                        <TextBlock Foreground="Black"
                       Text="Цена (руб)" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>

                <DataGridTextColumn 
                    Width="*" Binding="{Binding Path=TotalWeight}"
                    Foreground="Black" IsReadOnly="True"
                    CanUserSort="True">
                    <DataGridTextColumn.Header>
                        <TextBlock 
                            Foreground="Black" Text="Общий вес (кг)" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>

                <DataGridTextColumn 
                    Width="*" Binding="{Binding Path=UnitWeight}"
                    Foreground="Black" IsReadOnly="True"
                    CanUserSort="True">
                    <DataGridTextColumn.Header>
                        <TextBlock 
                            Foreground="Black" Text="Единичный вес (г)" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>

                <DataGridTextColumn 
                    Width="*" Binding="{Binding Path=ExpirationDate}"
                    Foreground="Black" IsReadOnly="True"
                    CanUserSort="True">
                    <DataGridTextColumn.Header>
                        <TextBlock 
                            Foreground="Black" Text="Срок годности (мес)" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>

                <DataGridTextColumn 
                    Width="*" Binding="{Binding Path=Count}"
                    Foreground="Black" IsReadOnly="True"
                    CanUserSort="True">
                    <DataGridTextColumn.Header>
                        <TextBlock 
                            Foreground="Black" Text="Кол-во" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid 
            Background="White" x:Name="PackagingsDataGrid"
            AutoGenerateColumns="False" CanUserAddRows="False"
            MinRowHeight="20" RowDetailsVisibilityMode="Visible"
            VerticalAlignment="Top" CanUserReorderColumns="False"
            CanUserResizeColumns="True" CanUserSortColumns="True"
            Sorting="StorageDataGrid_Sorting" CanUserResizeRows="False"
            SelectionUnit="Cell" Height="auto" 
            Visibility="Collapsed">
            <DataGrid.Columns>
                <DataGridTextColumn Width="70"
            Binding="{Binding Path=Id}"
            IsReadOnly="True"
            Foreground="Black">
                    <DataGridTextColumn.Header>
                        <TextBlock 
                            Foreground="Black" Text="" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>

                <DataGridTextColumn 
                    Width="4*" Binding="{Binding Path=Name}"
                    Foreground="Black" CanUserSort="True">
                    <DataGridTextColumn.Header>
                        <TextBlock 
                            Foreground="Black" Text="Название" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>

                <DataGridTextColumn 
                    Width="*" Binding="{Binding Path=MaxWeight}"
                    Foreground="Black" IsReadOnly="True"
                    CanUserSort="True">
                    <DataGridTextColumn.Header>
                        <TextBlock 
                Foreground="Black" Text="Макс. вес (кг)" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>

                <DataGridTextColumn 
                    Width="*" Binding="{Binding Path=Count}"
                    Foreground="Black" IsReadOnly="True"
                    CanUserSort="True">
                    <DataGridTextColumn.Header>
                        <TextBlock 
                Foreground="Black" Text="Кол-во" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button 
            Background="White" Foreground="Black"
            BorderBrush="Black" Content="Добавить"
            Width="auto" Cursor="Hand"/>
    </StackPanel>
</UserControl>
